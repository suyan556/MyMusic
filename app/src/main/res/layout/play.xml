<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/home_play"
    >
    <!--<SeekBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:progress="0"
        android:layout_gravity="center_horizontal"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"

            >
            <TextView
                android:id="@+id/music_show_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/music_show_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_up"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_prev_pressed"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:id="@+id/img_pause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_pause_pressed"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/img_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_next_pressed"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
